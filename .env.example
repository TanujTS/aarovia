# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/medical_records"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
PORT=3001

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_RPC_URL="https://mainnet.infura.io/v3/your-infura-key"

# Smart Contract Addresses (deploy these first)
MEDICAL_RECORDS_ACCESS_CONTRACT=""
MEDICAL_RECORDS_STORAGE_CONTRACT=""

# IPFS Configuration
IPFS_API_URL="https://ipfs.infura.io:5001"
IPFS_GATEWAY_URL="https://ipfs.io/ipfs/"

# Pinata IPFS Configuration (Recommended for medical records)
# Get these from https://pinata.cloud/
PINATA_API_KEY="your-pinata-api-key-here"
PINATA_SECRET_KEY="your-pinata-secret-key-here"
PINATA_JWT="your-pinata-jwt-token-here"

# Medical Data Encryption
DEFAULT_ENCRYPTION_KEY="medical_records_encryption_key_32chars_min_change_this"

# IPFS Provider Settings
IPFS_PROVIDER="pinata"  # Options: pinata, infura, web3storage, local
IPFS_MAX_FILE_SIZE="104857600"  # 100MB in bytes
IPFS_ENABLE_ENCRYPTION="true"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Blockchain Configuration (for IPFS integration)
# Replace with your blockchain RPC URL
RPC_URL="https://your-rpc-url-here"

# Wallet Configuration (KEEP SECURE!)
# Your wallet private key for contract interactions
PRIVATE_KEY="your-private-key-here"

# Smart Contract Addresses
CONTRACT_ADDRESS="your-medical-records-contract-address"
PATIENT_REGISTRY_ADDRESS="your-patient-registry-contract-address"
PROVIDER_REGISTRY_ADDRESS="your-provider-registry-contract-address"
