{
  "name": "@aarovia/database",
  "version": "1.0.0",
  "description": "Database schemas and utilities for medical records platform",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "drizzle-kit generate:pg",
    "push": "drizzle-kit push:pg",
    "migrate": "node dist/migrate.js",
    "studio": "drizzle-kit studio",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.0",
    "drizzle-kit": "^0.20.4",
    "typescript": "^5.2.2",
    "@aarovia/config": "file:../config"
  }
}
