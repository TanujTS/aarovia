{
  "name": "@aarovia/web3",
  "version": "1.0.0",
  "description": "Web3 and blockchain utilities for medical records platform",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "bun run tsc --noEmit",
    "compile": "bun run hardhat compile",
    "test": "bun run hardhat test",
    "deploy": "bun run hardhat ignition deploy ./ignition/modules/MedicalRecords.ts",
    "deploy:mumbai": "bun run hardhat ignition deploy ./ignition/modules/MedicalRecords.ts --network polygonMumbai",
    "deploy:polygon": "bun run hardhat ignition deploy ./ignition/modules/MedicalRecords.ts --network polygon"
  },
  "dependencies": {
    "@aarovia/types": "file:../types",
    "@nomicfoundation/edr": "^0.12.0-next.5",
    "@nomicfoundation/edr-win32-x64-msvc": "^0.12.0-next.5",
    "@openzeppelin/contracts": "^4.9.6",
    "openzeppelin": "^1.0.0",
    "viem": "^1.19.9"
  },
  "devDependencies": {
    "@aarovia/config": "file:../config",
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.6",
    "chai": "^5.3.3",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.6",
    "mocha": "^11.7.2",
    "typescript": "~5.8.0"
  },
  "type": "module"
}
